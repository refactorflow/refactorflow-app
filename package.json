    "clsx": "^2.1.1",
    "cmdk": "1.0.0",
    "geist": "^1.3.0",
    "lucide-react": "^0.462.0",
    "next": "^15.0.1",
    "next-auth": "5.0.0-beta.25",
    "next-safe-action": "^7.9.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.2",
    "resend": "^4.0.1",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
